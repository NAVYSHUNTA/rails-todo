<h1>詳細</h1>

<ul class="todo">
  <li><%= check_box_tag "todo[done]", "1", @todo.done, id: "todo_done_#{@todo.id}", data: { id: @todo.id } %></li>
  <li><%= "タスク：#{@todo.task}" %></li>
  <li><%= "優先度：#{priority_label @todo.priority}" %></li>
  <li><%= "締切：#{@todo.deadline ? l(@todo.deadline) : "なし"}" %></li>
</ul>

<%= link_to "一覧へ戻る", todos_path, class: "button" %>
