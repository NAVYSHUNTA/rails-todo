<%= form_with model: @todo, local: true, class: "todo" do |form| %>
  <div>
    <%= form.label :task, "タスク" %>
    <%= form.text_field :task, class: "form-task" %>
  </div>
  <div>
    <%= form.label :priority, "優先度" %>
    <%= form.select :priority, options_for_select([["高", 3], ["中", 2], ["低", 1]], @todo.priority) %>
  </div>
  <div>
    <%= form.label :deadline, "締切" %>
    <%= form.datetime_local_field :deadline %>
  </div>

  <div>
    <%= form.submit @todo.new_record? ? "作成" : "更新", class: "button" %>
  </div>
<% end %>
